{
    // 启用括号配对着色
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active",
    "editor.guides.bracketPairsHorizontal": "active",
    "editor.guides.highlightActiveIndentation": true,
    // 缩进指引线设置
    "editor.guides.highlightActiveBracketPair": true, // 高亮活动括号对
    "editor.indentSize": 4, // 缩进大小
    "editor.tabSize": 4, // Tab大小
    "editor.insertSpaces": true, // 使用空格而不是Tab
    "editor.detectIndentation": true, // 自动检测缩进
    // 字体设置
    "editor.fontFamily": "JetBrains Mono",
    "editor.fontSize": 18,
    "editor.fontWeight": "normal",
    "editor.lineHeight": 1.8, // 行高
    "editor.letterSpacing": 0.4, // 字符间距
    // 其他相关设置
    "editor.matchBrackets": "always",
    "editor.renderWhitespace": "boundary",
    // 代码编辑增强
    "editor.renderControlCharacters": true, // 显示控制字符
    "editor.renderLineHighlight": "all", // 高亮当前行
    "editor.renderLineHighlightOnlyWhenFocus": false, // 始终高亮当前行
    "editor.rulers": [100], // 代码行长度标尺
    "editor.wordWrapColumn": 100, // 自动换行列数
    "editor.wordWrap": "wordWrapColumn", // 自动换行方式
    "editor.codeLens": true, // 显示代码透镜
    "editor.minimap.enabled": true, // 显示代码缩略图
    "editor.minimap.showSlider": "always", // 始终显示缩略图滑块
    "editor.cursorBlinking": "smooth", // 光标平滑闪烁
    "editor.cursorSmoothCaretAnimation": "on", // 光标平滑移动
    "editor.smoothScrolling": true, // 平滑滚动
    "editor.mouseWheelScrollSensitivity": 1, // 鼠标滚轮灵敏度
    "editor.scrollbar.verticalScrollbarSize": 10, // 垂直滚动条大小
    // 代码智能提示
    "editor.suggestOnTriggerCharacters": true, // 触发字符时显示建议
    "editor.acceptSuggestionOnEnter": "smart", // 智能回车接受建议
    "editor.tabCompletion": "on", // Tab键补全
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false
    },
    // 代码格式化
    "editor.formatOnSave": true, // 保存时自动格式化
    "editor.formatOnPaste": true, // 粘贴时自动格式化
    "editor.formatOnType": true, // 输入时自动格式化
    "editor.trimAutoWhitespace": true, // 自动删除尾随空格
    "files.trimTrailingWhitespace": true, // 保存时删除尾随空格
    "files.insertFinalNewline": true, // 文件末尾插入空行
    // 搜索设置
    "search.exclude": {
        "**/build": true,
        "**/Objects": true,
        "**/Listings": true,
        "**/*.o": true,
        "**/*.d": true,
        "**/*.axf": true,
        "**/*.bin": true,
        "**/*.hex": true
    },
}
